<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background"
            />
        <android.support.v7.widget.Toolbar
            android:id="@+id/tb"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:title="Talkative"
            android:background="@color/colorPrimary"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"

            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_circular_border"
            android:backgroundTint="@color/colorAccent"
            android:elevation="5dp"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:layout_below="@+id/user_profile_photo"
            >
        <TextView
            android:id="@+id/name"

            android:text="Name:"
            android:paddingLeft="30sp"
            android:paddingTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"

            />
<android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@id/name1"
    android:layout_toRightOf="@+id/name"


    >
            <EditText
                android:layout_marginTop="10sp"
            android:id="@+id/Name1"
            android:layout_marginLeft="10sp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

                android:inputType="textMultiLine"
                android:textSize="18sp"
            android:text="bbbvbvbvbvbvbvbvvvbvbvbvbvbbvb"/>
</android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:text="Status:"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="35sp"
            android:id="@+id/status"
            android:textSize="18sp"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/Status1"
            android:layout_toRightOf="@+id/status"
            android:layout_below="@id/name1"
            >

            <EditText
                android:id="@+id/status1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10sp"
                android:layout_marginTop="0sp"
                android:text=""
                android:textColor="#000000"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status"
            android:text="Gender:"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="35sp"
            android:id="@+id/gender"
            android:textSize="18sp"
            />
<RadioGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_toRightOf="@+id/gender"
    android:layout_below="@+id/Status1"
    android:theme="MyRadioButton"
    android:id="@+id/radio">
    <RadioButton


        android:id="@+id/female"
        android:theme="@style/MyRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

android:text="female"
android:textSize="18sp"
        android:checked="true"
        android:layout_marginTop="25sp"
        android:layout_marginLeft="10sp"

        />
    <RadioButton

        android:layout_toRightOf="@+id/gender"
        android:layout_below="@+id/female"
        android:id="@+id/male"
        android:theme="@style/MyRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

android:text="male"
        android:textSize="18sp"


        android:layout_marginTop="5sp"
        android:layout_marginLeft="10sp"

        />
    <RadioButton

        android:layout_toRightOf="@+id/gender"
        android:layout_below="@+id/male"
        android:id="@+id/other"
        android:theme="@style/MyRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:text="other"
        android:textSize="18sp"



        android:layout_marginTop="5sp"
        android:layout_marginLeft="10sp"

        />
</RadioGroup>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender"
            android:text="Lives in:"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="97sp"
            android:id="@+id/lives_in"
            android:textSize="18sp"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Lives_in1"
            android:layout_below="@+id/radio"
            android:layout_toRightOf="@+id/lives_in">
        <EditText
            android:id="@+id/lives_in1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"

            android:layout_marginTop="0sp"
            android:layout_marginLeft="10sp"
            android:text=""
            android:textSize="18sp"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lives_in"
            android:text="Studied in:"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="35sp"
            android:id="@+id/studied_in"
            android:textSize="18sp"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Studied_in1"
            android:layout_below="@+id/Lives_in1"
            android:layout_toRightOf="@+id/studied_in">
        <EditText
            android:id="@+id/studied_in1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"

            android:layout_marginTop="2sp"
            android:layout_marginLeft="10sp"
            android:text=""
            android:textSize="18sp"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/studied_in"
            android:text="Workplace:"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="35sp"
            android:id="@+id/workplace"
            android:textSize="18sp"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Workplace1"
            android:layout_below="@+id/Studied_in1"
            android:layout_toRightOf="@+id/workplace">
            <EditText
            android:id="@+id/workplace1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"

            android:layout_marginTop="5sp"
            android:layout_marginLeft="10sp"
            android:text=""
            android:textSize="18sp"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/workplace"
            android:text="Marital Status:"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="35sp"
            android:id="@+id/marital_status"
            android:textSize="18sp"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Marital_status1"
            android:layout_toRightOf="@+id/marital_status"
            android:layout_below="@+id/Workplace1">
        <EditText
            android:id="@+id/marital_status1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"

            android:layout_marginTop="5sp"
            android:layout_marginLeft="10sp"
            android:text=""
            android:textSize="18sp"/></android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/marital_status"
            android:text="No. of friends:"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="35sp"
            android:id="@+id/friends"
            android:textSize="18sp"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Friends1"
            android:layout_toRightOf="@+id/friends"
            android:layout_below="@+id/Marital_status1">
        <EditText
            android:id="@+id/friends1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"

            android:layout_marginTop="6sp"
            android:layout_marginLeft="10sp"
            android:text=""
            android:textSize="18sp"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/friends"
            android:text="Highest Qualification:"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="35sp"
            android:id="@+id/qualify"
            android:textSize="18sp"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Qualify1"
            android:layout_below="@+id/Friends1"
            android:layout_toRightOf="@+id/qualify">

        <EditText
            android:id="@+id/qualify1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"

            android:layout_marginTop="7sp"
            android:layout_marginLeft="10sp"
            android:text=""
            android:textSize="18sp"/>
        </android.support.design.widget.TextInputLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qualify"
            android:text="Age:"
            android:textStyle="bold"

            android:textColor="@color/colorAccent"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="35sp"
            android:id="@+id/age"
            android:textSize="18sp"
            />


<android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/Age1"
    android:layout_below="@+id/Qualify1"
    android:layout_toRightOf="@+id/age">

        <EditText
            android:id="@+id/age1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"

            android:layout_marginTop="8sp"
            android:layout_marginLeft="10sp"
            android:layout_marginBottom="20sp"
            android:text=""
            android:textSize="18sp"/>
</android.support.design.widget.TextInputLayout>
        <Button android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:background="#558b2f"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="50sp"
            android:layout_below="@+id/age"
            android:textColor="@android:color/white"/>
        <Button android:id="@+id/upload_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload_photo"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:background="#558b2f"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="20sp"
            android:layout_below="@+id/age"
            android:layout_toRightOf="@+id/save"

            android:textColor="@android:color/white"/>

</RelativeLayout>
    </RelativeLayout>
</ScrollView>