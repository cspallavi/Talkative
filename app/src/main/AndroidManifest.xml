<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pallavi.chat_app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/talkative2"
        android:label="@string/app_name"

        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Register">
            <intent-filter>
                <action android:name="com.example.pallavi.chat_app.Register" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Chat">
            <intent-filter>
                <action android:name="com.example.pallavi.chat_app.Chat" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Registered_users_list">
            <intent-filter>
                <action android:name="com.example.pallavi.chat_app.Registered_users_list" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".FriendRequests">
            <intent-filter>
                <action android:name="com.example.pallavi.chat_app.FriendRequests"/>
                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>
        </activity>
        <activity android:name=".FriendList">
            <intent-filter>
                <action android:name="com.example.pallavi.chat_app.FriendList"/>
                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>
        </activity>
        <activity android:name="com.example.pallavi.chat_app.PrivateChats">
            <intent-filter>
                <action android:name="com.example.pallavi.chat_app.Private_chats"/>
                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>


        </activity>
        <activity android:name="com.example.pallavi.chat_app.About_more">
            <intent-filter>
                <action android:name="com.example.pallavi.chat_app.About_more"/>
                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>


        </activity>
        <activity android:name="com.example.pallavi.chat_app.About_less">
            <intent-filter>
                <action android:name="com.example.pallavi.chat_app.About_less"/>
                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>


        </activity>
        <activity android:name="com.example.pallavi.chat_app.Password_reset">
            <intent-filter>
                <action android:name="com.example.pallavi.chat_app.Password_reset"/>
                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>


        </activity>
        <activity android:name="com.example.pallavi.chat_app.SetMyProfile">
            <intent-filter>
                <action android:name="com.example.pallavi.chat_app.SetMyProfile"/>
                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>


        </activity>
    </application>

</manifest>